<?xml version="1.0" encoding="utf-8"?>
<resources>
  
  <style name="App_Theme" parent="@android:style/Theme.Holo">
  <!--<style name="App_Theme" parent="android:Theme.Material.Light">-->
    <item name="android:editTextStyle">@style/styleEdt</item>
    <!--<item name="editTextStyle">@style/App_EditTextStyle</item>-->
  </style>

  <!--<style name="styleEdt" parent="@android:style/Widget.EditText">-->
  <style name="styleEdt" parent="@android:style/Widget.EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@android:color/white</item>
  </style>
  
  <style name="styleTvw" parent="@android:style/Widget.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:hint">to be loaded</item>
    <item name="android:textColor">#ffffff</item>
  </style>
  
  <style name="styleTvwMainHeader" parent="@android:Widget.TextView">
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:background">#000000</item>
  </style>

  <!--Not used due to programmatic spinner population exceptions-->
  <style name="styleSpinner" parent="@android:Widget.Spinner">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@android:drawable/btn_dropdown</item>
    <item name="android:padding">0dp</item>
  </style>

  <style name="styleTvwMainMessage" parent="@android:Widget.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">italic</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:textSize">17sp</item>
  </style>

  <style name="styleTvwSubHeaderFirst" parent="@android:Widget.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:textSize">17sp</item>
  </style>

  <style name="styleTvwSubHeader" parent="@style/styleTvwSubHeaderFirst">
    <item name="android:paddingTop">20dp</item>
  </style>

  <style name="styleEdtDate" parent="@style/styleEdt">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:inputType">date</item>
    <item name="android:hint">Click to Select Date</item>
    <item name="android:focusable">false</item>
  </style>

  <style name="styleEdtReason" parent="@style/styleEdt">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:inputType">textMultiLine</item>
    <item name="android:hint">State Your Reason</item>
  </style>

  <style name="styleBtnSubmit" parent="@android:Widget.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">30dp</item>
    <item name="android:text">Submit</item>
    <item name="android:textColor">#ffffffff</item>
    <item name="android:background">#ff444444</item>
  </style>
  
</resources>
